{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "JX3RaidManager",
    "version": "1.2.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "message": true,
        "confirm": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**",
          "$USERPROFILE/**",
          "**"
        ]
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://node.jx3box.com/*"
        ]
      },
      "process": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "nsis"
      ],
      "identifier": "com.jx3.raidmanager",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "nsis": {
          "installMode": "currentUser"
        }
      }
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src https://fonts.googleapis.com; img-src 'self' data: https://icon.jx3box.com; connect-src 'self' https://open.bigmodel.cn https://generativelanguage.googleapis.com https://node.jx3box.com"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "剑网三副本管家",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}